
FINDING THE LONGEST WORD IN A STRING OF WORDS


function LongestWord(sen) {
    const strSplit = sen.split(' ');
  
    let longestWord = "";
    for(let i = 0; i < strSplit.length; i++){
      if(strSplit[i].length > longestWord.length){
           longestWord = strSplit[i];
       }
    }
   return longestWord
}
console.log(LongestWord("discard changes in working directory"));